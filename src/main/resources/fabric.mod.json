{
  "schemaVersion": 1,
  "id": "evenbetterarcheology",
  "version": "${mod_version}",

  "name": "Even Better Archeology",
  "description": "Discover artifacts & fossils by encountering new structures that'll enhance your adventure and exploration!",
  "authors": [
    "NoaSakurajin",
    "Pandarix",
    "Dunk3ll1cht"
  ],
  "contact": {
    "sources": "https://github.com/noah1510/EvenBetterArcheology",
    "homepage": "https://github.com/noah1510/EvenBetterArcheology#readme",
    "issues": "https://github.com/noah1510/EvenBetterArcheology/issues"
  },

  "license": "MIT",
  "icon": "assets/evenbetterarcheology/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "de.sakurajin.evenbetterarcheology.EvenBetterArcheology"
    ],
    "client": [
      "de.sakurajin.evenbetterarcheology.EvenBetterArcheologyClient"
    ]
  },
  "mixins": [
    "evenbetterarcheology.mixins.json"
  ],

  "accessWidener" : "evenbetterarcheology.accesswidener",

  "depends": {
    "fabricloader": ">=0.14.14",
    "fabric-api": "*",
    "minecraft": "~1.20",
    "java": ">=17",
    "owo-lib": "*",
    "sakuralib": ">=${sakuralib_version}",
    "advanced_runtime_resource_pack": ">=0.8.0"
  },
  "suggests": {
    "cit-resewn": ">=1.1.3+1.20",
    "numismatic-overhaul": "*",
    "modmenu": "*",
    "trinkets": "*",
    "elytra-slot": "*"
  },
  "conflicts": {
    "betterarcheology": "*"
  },
  "custom": {
    "mc-publish": {
      "modrinth": "LWRxA5tQ",
      "loaders": ["fabric"],
      "dependencies": [
        "fabric-api(required)",
        "owo-lib(required)",
        "advanced_runtime_resource_pack(required){modrinth:arrp}",
        "cit-resewn(recommended)",
        "modmenu(optional)",
        "numismatic-overhaul(optional)",
        "trinkets(optional)",
        "elytra-slot(optional)",
        "betterarcheology(incompatible)"
      ]
    },
    "sakuralib": {
      "format_version": 1
    }
  }
}
